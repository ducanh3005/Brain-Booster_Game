<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/brain_levelbg"
    tools:context="gamedevelepors.funcandi.brainbooster.Levels.Level3Activity">

    <gamedevelepors.funcandi.brainbooster.CustomView
        android:id="@+id/custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="18sp"
        android:layout_marginTop="70dp"
        android:textColor="#000"
        android:text="Which is farthest away from us?" />




    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="120sp"
        android:layout_height="120sp"
        android:background="@drawable/brain_sun"
        android:layout_marginBottom="10dp"
        android:layout_above="@+id/imageButton5"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:background="@drawable/brain_moon"
        android:layout_above="@+id/imageButton4"
        android:layout_marginBottom="13dp"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="120sp"
        android:layout_height="80sp"
        android:background="@drawable/brain_clouds"
        android:layout_marginBottom="78dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:visibility="invisible"
        android:layout_marginBottom="36dp"
        android:layout_alignBottom="@+id/imageButton4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton6"
        android:layout_marginStart="24dp"
        android:layout_marginTop="54dp"
        android:layout_toEndOf="@+id/imageButton6"
        android:text="Sun"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView5"
        android:layout_alignTop="@+id/imageButton5"
        android:layout_marginTop="49dp"
        android:text="Moon"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageButton4"
        android:layout_marginBottom="30dp"
        android:layout_toEndOf="@+id/imageButton4"
        android:layout_marginLeft="15dp"
        android:text="Clouds"
        android:textSize="20sp"/>




</RelativeLayout>
